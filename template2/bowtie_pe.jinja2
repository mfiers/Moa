### run
echo start bowtie pe														
bowtie -S {{ extra_params }}           	    \
    -I {{ min_insertsize }}             	\
    -X {{ max_insertsize }}             	\
    {{ ebwt_base }}                     	\
    -1 {{ fq_forward_input }}           	\
    -2 {{ fq_reverse_input }} | {{ snippets.sam2bam }} - > {{ output }}
echo fin bowtie pe

